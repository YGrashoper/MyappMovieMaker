        I_Tonya.setCinema_to_Watch("Skalvija");
        Risky_Business.setCinema_to_Watch ("Kinopasaka");
        Black_Panther.setCinema_to_Watch ("Forum Cinemas");
        Ready_Player_One.setCinema_to_Watch ("Forum Cinemas");
        Darkest_Hour.setCinema_to_Watch("Kinopasaka");

        System.out.println("You can see Black_Panther in  "+Black_Panther.getCinema_to_Watch());
        System.out.println("You can see I_Tonya "+I_Tonya.getCinema_to_Watch());
        System.out.println("You can see  Ready_Player_One in  "+Ready_Player_One.getCinema_to_Watch());
        System.out.println("You can see Darkest_Hour in  "+Darkest_Hour.getCinema_to_Watch());
        System.out.println("You can see Shape_of_Water in  "+Shape_of_Water.getCinema_to_Watch());




//       Shape_of_Water.ReleaseYear = "2018";
