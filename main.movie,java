        I_Tonya.setGenre("Biopic");
        Risky_Business.setGenre("RomCom");
        Black_Panther.setGenre ("Super Hero");
        Ready_Player_One.setGenre(" Sci-fi");
        Darkest_Hour.setGenre("War drama");

        System.out.println("Genre is "+Black_Panther.getGenre());
        System.out.println("Genre is "+I_Tonya.getGenre());
        System.out.println("Genre is "+Ready_Player_One.getGenre());
        System.out.println("Genre is "+Darkest_Hour.getGenre());
        System.out.println("Genre is "+Shape_of_Water.getGenre());

