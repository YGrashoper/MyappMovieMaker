import java.util.Scanner;

public class CinemaChoice {
    public static void main(String args[]) {
        Scanner scanner = new Scanner(System.in);
        System.out.println("Dear user , welcome to my Movieland");
        System.out.println("Please choose genre, the year of release, that we could offer you movie and where to watch it");
        Film Shape_of_Water = new Film();
